<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootContainer" spacing="30" alignment="CENTER" styleClass="spaced-container" xmlns:fx="http://javafx.com/fxml" fx:controller="com.notepass.controller.LoginController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="header-bar">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="darkModeButton" text="ðŸŒ™ Dark Mode" onAction="#handleDarkMode"/>
    </HBox>

    <VBox alignment="CENTER" spacing="40">
        <Label text="NotePass" styleClass="notepass-title"/>
        
        <VBox styleClass="login-container" spacing="20" alignment="CENTER">
            <VBox styleClass="form-section" spacing="15" maxWidth="350">
                <TextField fx:id="usernameField" promptText="Enter your username"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password"/>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Login" styleClass="primary-button" onAction="#handleLogin" HBox.hgrow="ALWAYS"/>
                    <Button text="Register" styleClass="secondary-button" onAction="#handleRegister" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
            
            <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: 600;"/>
        </VBox>
    </VBox>
</VBox> 